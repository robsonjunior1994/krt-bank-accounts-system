@model krt_bank_accounts_web.Models.AccountViewModel

@{
    ViewData["Title"] = "Excluir Conta";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning">
    Tem certeza que deseja excluir a conta abaixo?
</div>

<div class="border rounded p-3 mb-3">
    <p><strong>ID:</strong> @Model.Id</p>
    <p><strong>Nome:</strong> @Model.Name</p>
    <p><strong>CPF:</strong> @Model.Cpf</p>
    <p><strong>Status:</strong> @Model.Status</p>
    <p><strong>Criada em:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Name" />
    <input type="hidden" asp-for="Cpf" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>
