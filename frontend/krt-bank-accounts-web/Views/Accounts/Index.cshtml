@model krt_bank_accounts_web.Models.PagedResponse<krt_bank_accounts_web.Models.AccountViewModel>

<h2 class="mb-3">Contas Bancárias</h2>

<a asp-action="Create" class="btn btn-success mb-3">
    <i class="bi bi-plus-circle"></i> Nova Conta
</a>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>CPF</th>
            <th>Status</th>
            <th>Criado em</th>
            <th>Atualizado em</th>
            <th style="width: 330px;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Items == null || !Model.Items.Any())
        {
            <tr>
                <td colspan="7" class="text-center text-muted">
                    Nenhuma conta encontrada.
                </td>
            </tr>
        }
        else
        {
            @foreach (var conta in Model.Items)
            {
                var isActive = conta.Status == "Active";
                <tr>
                    <td>@conta.Id</td>
                    <td>@conta.Name</td>
                    <td>@conta.Cpf</td>
                    <td>
                        @if (isActive)
                        {
                            <span class="badge bg-success">Ativa</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inativa</span>
                        }
                </td>
                <td>@conta.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    @(conta.UpdatedAt.Year > 1
                                    ? conta.UpdatedAt.ToString("dd/MM/yyyy HH:mm")
                                    : "-")
            </td>
            <td class="d-flex gap-1">
                <a asp-action="Edit" asp-route-id="@conta.Id" class="btn btn-sm btn-primary">
                    <i class="bi bi-pencil-square"></i> Editar
                </a>
                <a asp-action="Delete" asp-route-id="@conta.Id" class="btn btn-sm btn-danger">
                    <i class="bi bi-trash"></i> Excluir
                </a>

                        <form asp-action="ToggleStatus" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@conta.Id" />

                    @if (isActive)
                            {
                                <input type="hidden" name="activate" value="false" />
                                <button type="submit" class="btn btn-sm btn-warning">
                                    <i class="bi bi-toggle-off"></i> Desativar
                                </button>
                            }
                            else
                            {
                                <input type="hidden" name="activate" value="true" />
                                <button type="submit" class="btn btn-sm btn-success">
                                    <i class="bi bi-toggle-on"></i> Ativar
                                </button>
                            }
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
